{
	"name": "annotated-validator",
	"version": "1.0.0",
	"description": "Validate objects by using annotations",
	"main": "index.js",
	"scripts": {
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"lint": "npm run lint:tsc && npm run lint:tsc:spec",
		"lint:tsc": "tslint -p tsconfig.app.json",
		"lint:tsc:spec": "tslint -p tsconfig.spec.json",
		"build": "check-engine package.json && tsc -p tsconfig.app.json",
		"test:watch": "nodemon --watch src --ext ts --exec 'jasmine-ts --config=jasmine.json'",
		"test": "jasmine-ts --config=jasmine.json"
	},
	"engines": {
		"node": ">=12.13.0",
		"npm": ">=6.12.0"
	},
	"engineStrict": true,
	"files": [
		"lib/**/*"
	],
	"keywords": [
		"object",
		"class",
		"validation",
		"validate",
		"annotations",
		"bean",
		"beanvalidation"
	],
	"author": "Christoph Linder",
	"license": "MIT",
	"devDependencies": {
		"@types/jasmine": "^3.4.4",
		"check-engine": "^1.8.1",
		"jasmine": "^3.5.0",
		"jasmine-spec-reporter": "^4.2.1",
		"jasmine-ts": "^0.3.0",
		"nodemon": "^1.19.4",
		"prettier": "^1.18.2",
		"reflect-metadata": "^0.1.13",
		"ts-node": "^8.4.1",
		"tslint": "^5.20.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.6.4"
	},
	"dependencies": {
		"validate.js": "^0.13.1"
	}
}
